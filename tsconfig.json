{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "types": ["node"],
    "resolveJsonModule": true,
    "noEmit": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["script"]
}
